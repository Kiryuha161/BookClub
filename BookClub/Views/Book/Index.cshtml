@model List<Book>

<div class="text-center mt-5">
    <h2 class="mb-5">Список книг</h2>
    <table class="table table-striped table-hover table-bordered">
        <thead>
            <tr>
                <th>Id</th>
                <th>Название</th>
                <th>Изображение</th>
                <th>Автор</th>
                <th>Описание</th>
                <th>Статус</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var books in Model)
            {
                <tr>
                    <td>@books.Id</td>
                    <td>@books.Title</td>
                    <td><img src="@books.ImageUrl" style="width: 100%; height: 100%;" /></td>
                    <td>@books.Author</td>
                    <td>@books.Description</td>
                    <td>@books.IsReadDisplay</td>
                    <td>
                        @if (!books.IsRead)
                        {
                            <form asp-controller="Book" asp-action="MarkBookAsRead" asp-route-bookId="@books.Id" method="post">
                                <button type="submit" class="btn btn-primary">Прочитано</button>
                            </form>
                        }
                        else
                        {
                            <form asp-controller="Book" asp-action="MarkBookAsUnread" asp-route-bookId="@books.Id" method="post">
                                <button type="submit" class="btn btn-secondary">Убрать из прочитанного</button>
                            </form>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
